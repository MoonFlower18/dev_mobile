<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif"
        android:text="Задание №3: Вызов системного приложения для съёмки - «Камера»"
        android:textColor="#1D334A"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbut2"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/navbut4"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:backgroundTint="#A388BF"
        android:fontFamily="sans-serif"
        android:text="Открыть модуль audiorecord"
        android:textColor="#1D334A"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.021" />

    <Button
        android:id="@+id/navbut3"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:backgroundTint="#A388BF"
        android:fontFamily="sans-serif"
        android:text="Открыть модуль camera"
        android:textColor="#1D334A"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif"
        android:text="Задание №4: Вызов системного приложения для записи голоса - «Микрофон»"
        android:textColor="#1D334A"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbut3"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif"
        android:text="Задание №2: Автоматическое отображение показаний акселерометра"
        android:textColor="#1D334A"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbut1"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/navbut2"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:backgroundTint="#A388BF"
        android:fontFamily="sans-serif"
        android:text="Открыть модуль accelerometer"
        android:textColor="#1D334A"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.012" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="416dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/paws" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Практическая работа №5"
        android:textColor="#1D334A"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif"
        android:text="Задание №1: Реализация вывода списка датчиков устройства"
        android:textColor="#1D334A"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.037" />

    <Button
        android:id="@+id/navbut1"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:backgroundTint="#A388BF"
        android:fontFamily="sans-serif"
        android:text="Открыть модуль sensorview"
        android:textColor="#1D334A"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.01" />


</androidx.constraintlayout.widget.ConstraintLayout>