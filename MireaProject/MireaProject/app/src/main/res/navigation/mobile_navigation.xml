<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.mirea.zhuravleva.mireaproject.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.mirea.zhuravleva.mireaproject.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.mirea.zhuravleva.mireaproject.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_data"
        android:name="com.mirea.zhuravleva.mireaproject.DataFragment"
        android:label="fragment_data"
        tools:layout="@layout/fragment_data" />

    <fragment
        android:id="@+id/nav_webview"
        android:name="com.mirea.zhuravleva.mireaproject.WebViewFragment"
        android:label="fragment_web_view"
        tools:layout="@layout/fragment_web_view" />

    <fragment
        android:id="@+id/nav_BackWorker"
        android:name="com.mirea.zhuravleva.mireaproject.Background_Worker"
        android:label="background_worker"
        tools:layout="@layout/background_worker" />

    <fragment
        android:id="@+id/nav_compas"
        android:name="com.mirea.zhuravleva.mireaproject.Compas"
        android:label="Compas"
        tools:layout="@layout/fragment_compas" />

    <fragment
        android:id="@+id/nav_note"
        android:name="com.mirea.zhuravleva.mireaproject.NoteBook"
        android:label="NoteBook"
        tools:layout="@layout/fragment_note_book" />

    <fragment
        android:id="@+id/nav_voicenote"
        android:name="com.mirea.zhuravleva.mireaproject.VoiceNote"
        android:label="Voice Note"
        tools:layout="@layout/fragment_voice_note" />

    <fragment
        android:id="@+id/nav_my_profile"
        android:name="com.mirea.zhuravleva.mireaproject.ProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_fragment_file"
        android:name="com.mirea.zhuravleva.mireaproject.FileFragment"
        android:label="File convert"
        tools:layout="@layout/fragment_file" />

    <fragment
        android:id="@+id/nav_firebase"
        android:name="com.mirea.zhuravleva.mireaproject.FirebaseFragment"
        android:label="Firebase"
        tools:layout="@layout/fragment_firebase">

        <!-- Добавляем действие для перехода к HomeWebFragment -->
        <action
            android:id="@+id/action_firebase_to_homeweb"
            app:destination="@id/nav_homeweb" />

    </fragment>

    <fragment
        android:id="@+id/nav_homeweb"
        android:name="com.mirea.zhuravleva.mireaproject.HomeWebFragment"
        android:label="Home web"
        tools:layout="@layout/fragment_home_web" />

</navigation>